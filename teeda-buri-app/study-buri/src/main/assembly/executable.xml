<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src</directory>
      <outputDirectory>/src</outputDirectory>
      <excludes>
        <exclude>.svn</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory></directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>pom.xml</include>
        <include>.classpath</include>
        <include>.project</include>
        <include>.tomcatplugin</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.settings</directory>
      <outputDirectory>/.settings</outputDirectory>
      <excludes>
        <exclude>.svn</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>db</directory>
      <outputDirectory>/db</outputDirectory>
      <excludes>
        <exclude>.svn</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>/src/main/webapp/WEB-INF/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
